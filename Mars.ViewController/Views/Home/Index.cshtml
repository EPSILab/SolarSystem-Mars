@using SolarSystem.Mars.ViewController.Resources

@model SolarSystem.Mars.ViewController.ViewModels.LoginViewModel

@{
    ViewBag.Title = PagesTitlesRessources.Home;
    Layout = "../Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<p>@Html.Raw(ContentRessources.WelcomeText)</p>
<p>@Html.Raw(ContentRessources.WelcomeText2)</p>
<div>&nbsp;</div>

<div class="col-md-5 col-md-offset-4">

    @using (Html.BeginForm("LogOn", "Home", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        @* Username *@
        <div class="form-group">
            <label class="col-sm-3 control-label">Nom utilisateur</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = ContentRessources.Username })
            </div>
        </div>

        @* Password *@
        <div class="form-group">
            <label class="col-sm-3 control-label">Mot de passe</label>
            <div class="col-sm-9">
                @Html.PasswordFor(model => model.PasswordNonCrypted, new { @class = "form-control", @placeholder = ContentRessources.Password })
            </div>
        </div>

        @* Connect button *@
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                <button type="submit" class="btn btn-primary">@ContentRessources.Connection</button>
            </div>
        </div>

        @* Register and Lost Password links *@
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                @Html.ActionLink(PagesTitlesRessources.Register, "Register")
            </div>
            <div class="col-sm-offset-3 col-sm-10">
                @Html.ActionLink(PagesTitlesRessources.LostPassword, "LostPassword")
            </div>
        </div>
    }
</div>