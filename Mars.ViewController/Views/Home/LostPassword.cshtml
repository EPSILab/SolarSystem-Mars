@using System.Web.Optimization
@using SolarSystem.Mars.ViewController.Resources

@model SolarSystem.Mars.ViewController.ViewModels.Concrete.LostPasswordViewModel

@{
    ViewBag.Title = PagesTitlesRessources.LostPassword;
    Layout = "~/Views/Shared/_LayoutNotConnected.cshtml";
}

<div class="jumbotron col-md-8 col-md-offset-2">
    
    <p>@ViewBag.Title</p>
    <div>@Html.Raw(ContentRessources.FindMyPasswordText)</div>
    <div>&nbsp;</div>

    <div class="form-horizontal">

        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", OnSuccess = "sendRequest" }))
        {
            @* Username *@
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = ContentRessources.Username })
                </div>
            </div>

            @* Email *@
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.PasswordFor(model => model.Email, new { @class = "form-control", @placeholder = ContentRessources.Email })
                </div>
            </div>

            @* Send button *@
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <button type="submit" class="btn btn-primary">@ContentRessources.FindMyPassword</button>
                </div>
            </div>

            @* Register and Lost Password links *@
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    @Html.ActionLink(PagesTitlesRessources.Home, "Index")
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        var sendRequest = function (data) {
            showMessage(data.message, !data.success);
        }
    </script>
}