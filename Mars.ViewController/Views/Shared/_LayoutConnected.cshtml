@using System.Web.Optimization
@using SolarSystem.Mars.Model.ManagersService
@using SolarSystem.Mars.ViewController.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Portail d'administration EPSILab</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)

    @Styles.Render("~/Content/css")

    <script type="text/javascript">
        $(".alert").alert();
    </script>
</head>
<body>
    <div>&nbsp;</div>
    <div class="container">
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(PagesTitlesRessources.LogOn, "LogOn", "Home")</li>
                <li>@Html.ActionLink(PagesTitlesRessources.EditProfile, "EditProfile", "Home")</li>
                <li>@Html.ActionLink(PagesTitlesRessources.LogOut, "LogOut", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right hidden-xs hidden-sm">
                <li class="navbar-text">
                    @{
                        Member currentUser = (Member)Session["CurrentUser"];
                        @Html.Raw(string.Format(ContentRessources.ConnectedAs, currentUser.FirstName, currentUser.LastName))
                    }
                </li>
                <li>
                    <img src="~/Assets/Logo.png" style="margin-right: 17px; margin-top: 3px" alt="EPSILab" width="129" height="40" />
                </li>
            </ul>
        </nav>

        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
        {
            <div class="container alert alert-success fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <p>@ViewBag.Message</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ViewBag.ExceptionMessage))
        {
            <div class="container alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <p>@ViewBag.ExceptionMessage</p>
            </div>
        }
        @RenderBody()
    </div>
</body>
</html>