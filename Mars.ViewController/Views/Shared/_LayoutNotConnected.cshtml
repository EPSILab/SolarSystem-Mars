@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Portail d'administration EPSILab</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)

    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
    
    <script type="text/javascript">
        $(".alert").alert();
    </script>
</head>
<body>
    <div style="text-align:right">
        <a href="/">
            <img src="~/Assets/Logo.png" width="161" height="50" />
        </a>
    </div>
    
    <div>&nbsp;</div>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="container alert alert-success fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p>@ViewBag.Message</p>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(ViewBag.ExceptionMessage))
    {
        <div class="container alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p>@ViewBag.ExceptionMessage</p>
        </div>
    }

    @RenderBody()
</body>
</html>